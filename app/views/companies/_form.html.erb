<div class="container">
   <div class="row user">
     <div class="board">
        <div class="stepwizard">
            <div class="stepwizard-row setup-panel">

                <div class="stepwizard-step">
                    <a href="#step-1" type="button" class="btn btn-primary btn-circle" title="Company Addresses">
                      <span class="round-tabs one">
                              <i class="glyphicon glyphicon-home"></i>
                      </span>
                    </a>
                    <p>Company Addresses</p>
                </div>


                <div class="stepwizard-step">
                    <a href="#step-2" type="button" class="btn btn-default btn-circle" title="Company Phones" disabled="disabled">
                      <span class="round-tabs two">
                        <i class="glyphicon glyphicon-phone-alt"></i>
                      </span>
                    </a>
                    <p>Company Phones</p>
                </div>

                <div class="stepwizard-step">
                    <a href="#step-3" type="button" class="btn btn-default btn-circle" title="Company Emails" disabled="disabled">
                      <span class="round-tabs three">
                        <i class="glyphicon glyphicon-envelope"></i>
                      </span>
                    </a>
                    <p>Company Emails</p>
                </div>
