                <div class="stepwizard-step">
                    <a href="#step-4" type="button" class="btn btn-default btn-circle" title="Confirmation" disabled="disabled">
                      <span class="round-tabs four">
                        <i class="glyphicon glyphicon-thumbs-up"></i>
                      </span>
                    </a>
                    <p>Confirmation</p>
                </div>

                <div class="stepwizard-step">
                    <a href="#step-5" type="button" class="btn btn-default btn-circle" title="Completed" disabled="disabled">
                      <span class="round-tabs five">
                        <i class="glyphicon glyphicon-ok"></i>
                      </span>
                    </a>
                    <p>Completed</p>
                </div> -->

            </div>
        </div>

          <div class="row setup-content" id="step-1">
              <div class="col-xs-12">
                  <div class="col-md-12">
                    <h3 class="head text-center">Company Details</h3>
                      <p class="narrow text-center">
                          Please fill up the following information
                      </p>


                      <%= simple_form_for @company do |f| %>
                        <%= f.input :name, label: "Name" %>

                        <div class="row">
                          <%= f.error :addresses %>
                          <%= f.simple_fields_for :addresses do |a| %>
                            <%= a.input :address1 %>
                            <%= a.input :city %>
                            <%= a.input :zip %>
                            <%= a.input :state %>
                          <% end %>
                        </div>
                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
                  </div>
              </div>
          </div>

          <div class="row setup-content" id="step-2">
              <div class="col-xs-12">
                  <div class="col-md-12">
                    <h3 class="head text-center">Company Details</h3>
                      <p class="narrow text-center">
                          Please fill up the following information
                      </p>

                        <div class="row">
                          <%= f.error :phones %>
                          <%= f.simple_fields_for :phones do |p| %>
                            <%= p.input :phone_number %>
                            <%= p.input :ext %>
                          <% end %>
                        </div>
                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
                  </div>
              </div>
          </div>

          <div class="row setup-content" id="step-3">
              <div class="col-xs-12">
                  <div class="col-md-12">
                    <h3 class="head text-center">Business Emails</h3>
                      <p class="narrow text-center">
                          Please fill in the following Information
                      </p>

                      <div class="row">
                        <%= f.error :emails %>
                        <%= f.simple_fields_for :emails do |e| %>
                          <%= e.input :email %>

                        <% end %>
                      </div>
                     <%= f.button :submit %>
                    <% end %>
                  </div>
              </div>
          </div>

  </div>
</div>
