<div class="container">
   <div class="row">
     <div class="board">
        <div class="stepwizard">
            <div class="stepwizard-row setup-panel">

                <div class="stepwizard-step">
                    <a href="#step-1" type="button" class="btn btn-primary btn-circle" title="Company Addresses">
                      <span class="round-tabs one">
                              <i class="glyphicon glyphicon-home"></i>
                      </span>
                    </a>
                    <p>Company Addresses</p>
                </div>


                <div class="stepwizard-step">
                    <a href="#step-2" type="button" class="btn btn-default btn-circle" title="Company Phones" disabled="disabled">
                      <span class="round-tabs two">
                        <i class="glyphicon glyphicon-phone-alt"></i>
                      </span>
                    </a>
                    <p>Company Phones</p>
                </div>

                <div class="stepwizard-step">
                    <a href="#step-3" type="button" class="btn btn-default btn-circle" title="Company Emails" disabled="disabled">
                      <span class="round-tabs three">
                        <i class="glyphicon glyphicon-envelope"></i>
                      </span>
                    </a>
                    <p>Company Emails</p>
                </div>

                <div class="stepwizard-step">
                    <a href="#step-4" type="button" class="btn btn-default btn-circle" title="Confirmation" disabled="disabled">
                      <span class="round-tabs four">
                        <i class="glyphicon glyphicon-thumbs-up"></i>
                      </span>
                    </a>
                    <p>Confirmation</p>
                </div>

                <div class="stepwizard-step">
                    <a href="#step-5" type="button" class="btn btn-default btn-circle" title="Completed" disabled="disabled">
                      <span class="round-tabs five">
                        <i class="glyphicon glyphicon-ok"></i>
                      </span>
                    </a>
                    <p>Completed</p>
                </div>

            </div>
        </div>
        <form role="form">

            <div class="row setup-content" id="step-1">
                <div class="col-xs-12">
                    <div class="col-md-12">
                      <h3 class="head text-center">Company Details</h3>
                        <p class="narrow text-center">
                            Please fill up the following information
                        </p>

                          <%= form_tag @company do %>

                            <div class="form-group">
                              <%= label_tag :name %>
                              <%= text_field_tag :name, "", class: "form-control", required: true, placeholder: 'Enter Company Name', maxlength: 100 %>
                            </div>

                            <div class="form-group">
                              <%= label_tag :email %>
                              <%= text_field_tag :email, "", class: "form-control", required: true, placeholder: 'Business Email:', maxlength: 100 %>
                            </div>

                              <%= fields_for :addresses do %>

                                <div class="form-group">
                                  <%= label_tag :address1 %>
                                  <%= text_field_tag :address1, "", class: "form-control", required: true, placeholder: 'Business Address:', maxlength: 200 %>
                                </div>

                                <div class="form-group">
                                  <%= label_tag :city %>
                                  <%= text_field_tag :city, "", class: "form-control", required: true, placeholder: 'City:', maxlength: 100 %>
                                </div>

                                <div class="form-group">
                                  <%= label_tag :state %>
                                  <%= text_field_tag :state, "", class: "form-control", required: true, placeholder: 'State:', maxlength: 100 %>
                                </div>

                                <div class="form-group">
                                  <%= label_tag :zip %>
                                  <%= text_field_tag :zip, "", class: "form-control", required: true, placeholder: 'Zip:', maxlength: 100 %>
                                </div>
                                <%#= a.input :country %>
                              <% end %>
                            <% end %>

                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
                    </div>
                </div>
            </div>

            <div class="row setup-content" id="step-2">
                <div class="col-xs-12">
                    <div class="col-md-12">
                      <h3 class="head text-center">Welcome <%= current_user.first_name %><sup>™</sup> <span style="color:#f48260;">♥</span></h3>
                        <p class="narrow text-center">
                            Please fill in the following Information
                        </p>

                        <%= form_tag @company do %>

                            <%= fields_for :phones do %>

                              <div class="form-group">
                                <%= label_tag :phone_number %>
                                <%= text_field_tag :phone_number, "", class: "form-control", required: true, placeholder: 'Phone Number:', maxlength: 20 %>
                              </div>

                              <div class="form-group">
                                <%= label_tag :ext %>
                                <%= text_field_tag :ext, "", class: "form-control", required: true, placeholder: 'Ext:', maxlength: 10 %>
                              </div>

                              <div class="form-group">
                                <%= label_tag :phones_kind %>
                                <%= text_field_tag :phones_kind, "", class: "form-control", required: true, placeholder: 'Phone Type:', maxlength: 10 %>
                              </div>

                            <% end %>
                          <% end %>

                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
                    </div>
                </div>
            </div>

            <div class="row setup-content" id="step-3">
                <div class="col-xs-12">
                    <div class="col-md-12">
                      <h3 class="head text-center">Business Emails</h3>
                        <p class="narrow text-center">
                            Please fill in the following Information
                        </p>

                        <%= form_tag @company do %>

                            <%= fields_for :emails do %>

                              <div class="form-group">
                                <%= label_tag :email %>
                                <%= text_field_tag :email, "", class: "form-control", required: true, placeholder: 'Business Email:', maxlength: 30 %>
                              </div>

                            <% end %>
                          <% end %>
                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
                    </div>
                </div>
            </div>

            <div class="row setup-content" id="step-4">
                <div class="col-xs-12">
                    <div class="col-md-12">
                      <h3 class="head text-center">Confirmation</h3>
                        <p class="narrow text-center">
                            Please make sure you entered the correct information
                        </p>


                        <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
                    </div>
                </div>
            </div>

            <div class="row setup-content" id="step-5">
                <div class="col-xs-12">
                    <div class="col-md-12">
                      <h3 class="head text-center">You made it<span style="color:#f48260;">♥</span><%= current_user.first_name %></h3>
                        <p class="narrow text-center">
                            thanks for staying tuned!.
                        </p>


                        <button class="btn btn-success btn-lg pull-right" type="submit">Finish!</button>
                    </div>
                </div>
            </div>

        </form>
  </div>
</div>
